      "script": {
        "exec": [
          "// Auto-set base URL if not set",
          "if (!pm.environment.get('base_url')) {",
          "    pm.environment.set('base_url', 'http://localhost:3000');",
          "}",
          "",
          "// Auto-set test user credentials if not set",
          "if (!pm.environment.get('user_email')) {",
          "    pm.environment.set('user_email', 'test@elkbackend.com');",
          "}",
          "if (!pm.environment.get('user_password')) {",
          "    pm.environment.set('user_password', 'TestPassword123!');",
          "}"
        ]
      }
    }
